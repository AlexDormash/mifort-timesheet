<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Time sheet</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet"></link>

  </head>
  <body>
    <div class="container"> 
      <div class="page-header">
        <h1>Time sheet</h1>
      </div>
      <form id="timesheetForm" method="POST" action="/save" accept-charset="utf-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="text-center col-md-1">Date</th>
              <th class="text-center col-md-1">Expected</th>
              <th class="text-center col-md-1">Actual</th>
              <th class="text-center col-md-8">Comment</th>
            </tr>
          </thead>
          <tbody>
            <% monthDates.forEach(function(date, index) { %>
              <tr>
                <td> <%= date %> </td>
                <td class="text-center">8</td>
                <td>
                  <input type="text" class="form-control" name="timelog<%= index %>[actual]"></input>
                </td>
                <td>
                  <textarea class="form-control" rows="1" name="timelog<%= index %>[comment]"></textarea>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <input type="submit" value="Save"></input>
      </form>

      <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
      <!-- Include all compiled plugins (below), or include individual files as needed -->
      <script src="js/bootstrap.min.js"></script>
    </div>
  </body>
</html>